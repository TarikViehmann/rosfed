Name:           ros-{{ distro }}-{{ pkg_name }}
Version:        {{ pkg_version }}
Release:        {{ pkg_release }}%{?dist}
Summary:        ROS package {{ pkg_name }}

License:        {{ license }}
URL:            {{ pkg_url }}
{% for url in source_urls -%}
Source{{ loop.index0 }}:        {{ url }}#/ros-{{ distro }}-{{ pkg_name }}-{{ pkg_version }}-source{{ loop.index0 }}.tar.gz
{% endfor %}

{% for patch in patches -%}
Patch{{ loop.index0 }}: {{ patch }}
{% endfor %}

BuildRequires:  python2-catkin_pkg
BuildRequires:  cmake
{% for dep in ros_dependencies -%}
BuildRequires:  ros-{{ distro }}-{{ dep }}
{% endfor %}
{% for dep in system_dependencies -%}
BuildRequires:  {{ dep }}
{% endfor %}

{% for dep in ros_dependencies -%}
Requires:       ros-{{ distro }}-{{ dep }}
{% endfor %}
{% for dep in system_dependencies -%}
Requires:       {{ dep }}
{% endfor %}

%description
{{ pkg_description }}


%prep
%autosetup


%build
%configure
%make_build


%install
rm -rf $RPM_BUILD_ROOT
%make_install


%files
%license add-license-file-here
%doc add-docs-here



